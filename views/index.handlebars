<h1>Eat Da Burger!</h1>

<h2>New Burgers</h2>
{{!--New burger list--}}
<ul>
    {{#each burgers}}
        <p>Name: {{burger.burger_name}}</p>
    {{/each}}
    <button class="devour-burger" data-id="{{this.id}}">DEVOUR ME!</button>
</ul>

{{!--devoured burger list--}}
<h2>Devoured Burgers</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>

{{!--form to add new burger to the list--}}
<h2>Add a New Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <div class="form-group">
    <label for="devoured"></label><br>
    <h3>Enter a burger you would like to eat. Click submit button. </h3>
  </div>

  <button type="submit">Add Burger</button>
</form>