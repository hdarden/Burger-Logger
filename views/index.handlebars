<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Eat Da Burger!</h1>
  </div>
</div>

<div class="container">
  <div class="text-center">
    <img src="../assets/img/favicon.ico" class="img-fluid center" alt="Responsive image">  </div>
</div>
<br>
<br>

<div class="container">
  <div class="row">
    <div class="col">
      <h2>New Burgers</h2>
      {{!--New burger list--}}
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          <p>{{burger_name}}</p>
          <button class="devour-burger" data-id="{{id}}" data-devour="{{devoured}}">DEVOUR ME!</button>
          <hr>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>


    {{!--devoured burger list--}}
    <div class="row">
      <div class="col">
        <h2>Devoured Burgers</h2>
        <ul>
          {{#each burgers}}
          {{#if devoured}}
          <li>
            <p>{{burger_name}}</p>
          </li>
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
<br>
  <div class="container text-center">
    <div class="row">
      <div class="col">
        {{!--form to add new burger to the list--}}
        <h2>Add a New Burger</h2>
        <form class="create-form">

          <div class="form-group">
            <label for="burg">Burger Name:</label>
            <input type="text" id="burg" name="burger_name">
          </div>

          <div class="form-group">
            <label for="devoured"></label><br>
            <h5>Add a burger you would like to eat.</h5>
          </div>

          <button type="submit">Add Burger</button>
        </form>
        <br>
        <br>

      </div>
    </div>
  </div>