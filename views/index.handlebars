<h1>Eat Da Burger!</h1>

<h2>New Burgers</h2>
{{!--New burger list--}}
<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <li>
    <p>{{burger_name}}</p>
    <button class="devour-burger" data-id="{{id}}" data-devour="{{devoured}}">DEVOUR ME!</button>
  </li>
  {{/unless}}
  {{/each}}
</ul>

{{!--devoured burger list--}}
<h2>Devoured Burgers</h2>
<ul>
  {{#each burgers}}
  {{#if devoured}}
  <li>
    <p>{{burger_name}}</p>
  </li>
  {{/if}}
  {{/each}}
</ul>

{{!--form to add new burger to the list--}}
<h2>Add a New Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured"></label><br>
    <h3>Add a burger you would like to eat. Click submit button. </h3>
  </div>

  <button type="submit">Add Burger</button>
</form>